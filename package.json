{
  "name": "@sadoprotocol/sado-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "start": "tsx ./src/main.ts",
    "dev": "tsx watch ./src/main.ts",
    "local:start": "docker compose --profile local up -d",
    "local:stop": "docker compose --profile local down",
    "stress": "tsx ./src/test.ts",
    "worker": "tsx ./src/Workers/Worker.ts",
    "indexer": "tsx ./src/Workers/Indexer.ts",
    "reorg": "tsx ./src/Workers/Reorg.ts",
    "ordinals": "tsx ./src/Workers/Ordinals/Indexer.ts",
    "inscriptions": "tsx ./src/Workers/Inscriptions/Patch.ts",
    "brc": "tsx ./src/Workers/Brc20/Resolve.ts",
    "patch": "tsx ./src/Workers/Patch.ts",
    "clean": "rm -rf dist",
    "lint": "eslint ./src --max-warnings 0 --report-unused-disable-directives --fix"
  },
  "dependencies": {
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^11.1.0",
    "@valkyr/api": "^0.23.5",
    "base64-url": "^2.3.3",
    "big.js": "^6.2.1",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.3",
    "bitcoinjs-message": "^2.2.0",
    "computed-types": "^1.11.2",
    "dotenv": "^16.3.1",
    "fastify": "^4.23.1",
    "form-data": "^4.0.0",
    "ioredis": "^5.3.2",
    "lodash.get": "^4.4.2",
    "lodash.mapvalues": "^4.6.0",
    "mongodb": "^6.0.0",
    "node-fetch": "^3.3.2",
    "p-limit": "^4.0.0",
    "tiny-secp256k1": "^2.2.3"
  },
  "devDependencies": {
    "@types/base64-url": "^2.2.0",
    "@types/big.js": "^6.2.0",
    "@types/debug": "^4.1.8",
    "@types/form-data": "^2.5.0",
    "@types/lodash.get": "^4.4.7",
    "@types/lodash.mapvalues": "^4.6.7",
    "@types/node": "^20.6.0",
    "@types/node-fetch": "^2.6.5",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-anti-trojan-source": "^1.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "tsx": "^3.12.10",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "**/*.ts": "prettier --write --ignore-unknown"
  },
  "engines": {
    "node": "^18.0.0"
  }
}
